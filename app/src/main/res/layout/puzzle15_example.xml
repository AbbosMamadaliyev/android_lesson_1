<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/backgr"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_height="0dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/backgr"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_height="0dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:id="@+id/time_view"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Step: "
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/step_view"
                android:textColor="#fff"
                android:textSize="20sp"
                tools:text="0" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ABC3CD">

        <Button
            android:id="@+id/p1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="0:0"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="1" />

        <Button
            android:id="@+id/p2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p1"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="0:1"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="2" />

        <Button
            android:id="@+id/p3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p2"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="0:2"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="3" />

        <Button
            android:id="@+id/p4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p3"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="0:3"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="4" />

        <Button
            android:id="@+id/p5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p1"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="1:0"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="5" />

        <Button
            android:id="@+id/p6"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p2"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p5"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="1:1"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="6" />

        <Button
            android:id="@+id/p7"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p3"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p6"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="1:2"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="7" />

        <Button
            android:id="@+id/p8"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p4"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p7"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="1:3"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="8" />

        <Button
            android:id="@+id/p9"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p5"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="2:0"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="9" />

        <Button
            android:id="@+id/p10"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p6"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p9"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="2:1"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="10" />

        <Button
            android:id="@+id/p11"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p7"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p10"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="2:2"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="11" />

        <Button
            android:id="@+id/p12"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p8"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p11"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="2:3"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="12" />

        <Button
            android:id="@+id/p13"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p9"
            android:layout_alignParentStart="true"
            android:layout_margin="2dp"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="3:0"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="13" />

        <Button
            android:id="@+id/p14"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p10"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p13"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="3:1"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="14" />

        <Button
            android:id="@+id/p15"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p11"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p14"
            android:background="@drawable/fill_button"
            android:onClick="buttonClick"
            android:tag="3:2"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:text="15" />

        <Button
            android:id="@+id/p16"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/p12"
            android:layout_margin="2dp"
            android:layout_toEndOf="@id/p15"
            android:background="@drawable/empty_button"
            android:onClick="buttonClick"
            android:tag="3:3"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <Button
            android:text="Finish"
            android:id="@+id/finishBtn"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Restart"
            android:id="@+id/restartBtn"
            android:layout_width="match_parent"
            android:layout_above="@id/finishBtn"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</FrameLayout>